<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/styleinstitutos.css">
    <link rel="stylesheet" href="../css/styleheader.css">
    <title>Institutos</title>
</head>

<body class="fondo">
    <!-- secci√≥n men√∫-->
    <%-include("./partials/header") %>

    <!-- secci√≥n cabecera -->
    <div class="bienvenida">    
        <h2>Institutos Educativos</h2>
        <hr>
    </div>
    <div class="search">
        <form action="/buscar" method="GET" class="search-container">
            <span class="search-icon">üîç</span>
            <input type="search" name="query" placeholder="Buscar">
        </form>
        <label for="filter">Filtrar Por</label>
        <select name="filter" id="filter">
            <option value="carreras">Carreras disponibles</option>
        </select>
    </div>

    <!-- Secci√≥n institutos-->
    <div class="institutos-container">
        <% institutos.forEach(instituto=> { %>
        <div class="instituto">
            <div class="img-instituto">
                <img src="../img/unah.jpg" alt="">
            </div>
            <div class="nombre"><h4> <%= instituto.nombre %></h4></div>
            <a href="/matricula">
                <button class="btn-instituto">Seleccionar</button>
            </a>
        </div>
        <% }); %>

    <script src="../js/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

 <%-include("./partials/footer") %>