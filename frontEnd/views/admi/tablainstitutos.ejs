<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../../css/styletablas.css" />
    <link rel="stylesheet" href="../../css/styleheader.css" />
    <title>Institutos</title>
</head>

<body class="fondo">
    <!-- sección menu -->
    <%-include("../partials/navAdmi") %>

        <div class="bienvenida">
            <h2>Lista de institutos</h2>
        </div>
        <hr />

        <!-- sección tabla -->

        <div class="table-container">
            <table>
                <thead class="table-header">
                    <tr class="header-row">
                        <th id="th-id">ID</th>
                        <th>Nombre</th>
                        <th>Dirección</th>
                        <th>Tipo de educación</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% institutos.forEach(institute=> { %>
                        <tr>
                            <td>
                                <%= institute.id_institucion %>
                            </td>
                            <td>
                                <%= institute.nombre %>
                            </td>
                            <td>
                                <%= institute.direccion%>
                            </td>
                            <td>
                                <%= institute.educacion %>
                            </td>
                            <td>
                                <a href="#">Ver más</a> | <a href="#">Editar</a> |  <button class="delete-btn" data-id="<%= institute.id_institucion %>">Eliminar</button>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </div>

        <script src="js/main.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
        
        <%- include('../partials/footer') -%>